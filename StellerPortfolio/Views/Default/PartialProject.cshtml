@model List<StellerPortfolio.Models.TblProject>

<section id="portfolio" class="section">
    <div class="container text-center">
        <h6 class="subtitle">Projelerim</h6>
        <h6 class="section-title mb-4">Geliştirdiğim Projelerime Göz Atın.</h6>
        <p class="mb-5 pb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit. In alias dignissimos. <br> rerum commodi corrupti, temporibus non quam.</p>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="img-wrapper">
                        <img src="~/Templates/steller/public_html/assets/imgs/@item.ImageUrl" />"" alt="">
                        <div class="overlay">
                            <div class="overlay-infos">
                                <h5>@item.Title</h5>
                                <a href="javascript:void(0)"><i class="ti-zoom-in"></i></a>
                                <a href="@item.ProjectLinkUrl"><i class="ti-link"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

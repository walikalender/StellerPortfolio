@model List<StellerPortfolio.Models.TblServices>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Icon Url</th>
        <th>Hizmet Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.ServiceName</td>
            <td><img src="@item.ServiceIconUrl" style="height: 50px; width: 50px;"></td>
            <td>@(item.ServiceStatus==true?"Aktif":"Pasif")</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-info">Güncelle</a></td>
            <td> <a href="/Service/MakeActive/@item.ServiceID" class="btn btn-success">Aktif Yap</a></td>
            <td><a href="/Service/MakePassive/@item.ServiceID" class="btn btn-warning">Pasif Yap</a></td>
        </tr>
    }

</table>
<br />
<a href="/Service/AddService" class="btn btn-success">Hizmet Ekle</a>

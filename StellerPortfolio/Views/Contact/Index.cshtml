@model List<StellerPortfolio.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İletişim Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adres</th>
        <th>Eposta</th>
        <th>Telefon</th>
        <th>Harita Url</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactID</td>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.MapUrl</td>

            <td>
                <a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<br />

<a href="/Contact/AddContact/" class="btn btn-success">Ekle</a>

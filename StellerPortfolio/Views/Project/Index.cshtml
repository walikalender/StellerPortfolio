@model List<StellerPortfolio.Models.TblProject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Projeler Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Proje Adı</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Proje Linki</th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.ProjectID</td>
            <td>@item.Title</td>
            <td>@item.ProjectName</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" / height="50px" width="50px"></td>
            <td>@item.ProjectLinkUrl</td>
            <td>
                <a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-danger">Sil</a>
                <a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
</br>

<a href="/Project/AddProject/" class="btn btn-success">Ekle</a>

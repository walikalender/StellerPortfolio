@model List<StellerPortfolio.Models.TblTestimonials>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referanslar Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Açıklama</th>
        <th>Meslek</th>
        <th>Resim</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Job</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" / height="50px" width="50px"></td>
            <td>
                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
</br>
<a href="/Testimonial/AddTestimonial" class="btn btn-info">Add</a>

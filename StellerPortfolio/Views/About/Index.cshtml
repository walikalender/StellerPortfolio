@model List<StellerPortfolio.Models.TblAbouts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Hakkımda Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Açıklama</th>
        <th>Meslek</th>
        <th>Resim</th>
        <th>Cv</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Description</td>
            <td>@item.Job</td>
            <td><img src="@item.ImageUrl" style="height=50px; width=50px;"></td>
            <td>@item.CvDownloadUrl</td>
            <td>
                <a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Delete</a>
                <a href="/About/UpdateAbout/" class="btn btn-info">Update</a>
            </td>
        </tr>
    }

</table>
</br>

<a href="/About/AddAbout/" class="btn btn-success">Ekle</a>
